<div class="form-wrapper">
  <h1>settings</h1>
  <% if @user.errors.any? %>
    <div class="notification">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for @user do |f| %>
    <div class="form-item">
      <%= f.label :username, class:"label" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "email" , :placeholder => "Username", class: "input" %>
    </div>
    <div class="form-item">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autocomplete: "email", :placeholder => "Email Address", class: "input" %>
    </div>
    <div class="form-item">
      <%= f.label :Password, class: "label" %>
      <%= f.password_field :email, autocomplete: "now-password", :placeholder => "Now Password", class: "input" %>
    </div>
    <div class="form-item">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :email, autocomplete: "new-password", :placeholder => "New Password", class: "input" %>
    </div>
    <div class="form-item">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "confirm-password", :placeholder => "Confirm Password", class: "input" %>
    </div>
    
    <div class="actions">
      <%= f.submit "Change my password", class: "button" %>
    </div>
    <form-footer>
      </br></br></br></br></br>
    </form-footer>
  <% end %>
</div>
